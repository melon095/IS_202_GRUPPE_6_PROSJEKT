@{
    ViewBag.Title = "In-Depth Report";
}
@model Kartverket.Web.Models.Report.Response.InDepthReportModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">

<div id="model-title">
    <h2 class="is-size-1">
    Rapport: @Model.Title
    </h2>
</div>
<p>@Model.Description</p>
<p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>

@if (Model.Points != null && Model.Points.Any())
{
    <h2>Points</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Elevation (m)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Points.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model.Points[i].Lat</td>
                    <td>@Model.Points[i].Lng</td>
                    <td>@Model.Points[i].Elevation</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No points available for this report.</p>
}