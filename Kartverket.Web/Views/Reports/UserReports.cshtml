@model GetReportsModel

@{
    Layout = "_Layout";
}

<h2>Your Reports</h2>

<table>
    <thead>
        <tr>
            <th>Report Name</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.Reports)
        {
            <tr>
                <td>@report.Title</td>
                <td>@report.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Delete", "Reports", new { id = report.Id })" onclick="return confirm('Are you sure you want to delete this report?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>